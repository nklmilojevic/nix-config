{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:recommended',
    'github>nklmilojevic/renovate-config',
    'github>nklmilojevic/renovate-config:automerge-github-actions',
  ],
  nix: {
    enabled: true,
  },
  lockFileMaintenance: {
    enabled: true,
    schedule: [
      'after 2am and before 3am',
    ],
    automerge: true,
    automergeType: 'pr',
    platformAutomerge: true,
    addLabels: [
      'nix',
      'dependencies',
    ],
  },
}
